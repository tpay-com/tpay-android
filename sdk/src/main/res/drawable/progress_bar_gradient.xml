<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1530">

    <shape
        android:shape="ring"
        android:useLevel="false"
        android:thickness="4dp">

        <size
            android:width="24dp"
            android:height="24dp"/>

        <gradient
            android:angle="180"
            android:type="sweep"
            android:startColor="@color/colorPrimary500"
            android:endColor="@color/colorNeutralWhite"
            android:useLevel="false"/>

    </shape>

</rotate>